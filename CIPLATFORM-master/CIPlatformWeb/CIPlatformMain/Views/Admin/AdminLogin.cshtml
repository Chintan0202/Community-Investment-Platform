@model CIPlatformMain.Entities.Models.Admin;

@{
    ViewData["Title"] = "AdminLogin Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
   
    <link rel="stylesheet" href="/css/site.css" />

    <script src="js/bootstrap.bundle.min.js"></script>
    <title>Document</title>
</head>
<body>

    <div class="row align-items-center p-0">
        <div class="col-lg-8 p-0">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="~/images/Grow-Trees-On-the-path-to-environment-sustainability-login.png" alt="First slide">
         <div class="carousel-caption d-none d-md-block">
                            <h3 class="text-start">Third Slide </h3>
                            <p class="text-start">
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore
                                et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut al
                                iquip ex ea commodo consequat. p>
                        </div> 
  </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="~/images/Grow-Trees-On-the-path-to-environment-sustainability-login.png" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="~/images/Grow-Trees-On-the-path-to-environment-sustainability-login.png" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

        </div>
        <div class="col-lg-4">

            <form asp-action="AdminLogin">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label mt-5">Email address</label>

                    <input type="email" asp-for="Email" class="form-control" placeholder="Email">

                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>

                <div class="input-group-lg mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>

                    <input type="password" asp-for="Password" class="form-control" placeholder="password">

                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>

                <input value="Login" type="submit" class="btn" id="login-btn" />
                @if (ViewBag.Logincredentials == 0)
                {
                    <div class="alert alert-danger mt-2">Invalid credentials Please enter valid email and password</div>
                }
            </form>


            <p class="text-center align-bottom" id="pr">Privacy Policy</p>



        </div>
    </div>




</body>
</html>
